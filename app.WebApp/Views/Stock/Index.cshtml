@model IEnumerable<StockView>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SN = 1;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center shadow">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Stock List </li>
            </ol>
        </div>
    </div>
</div>

<section class="">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row w-100 mb-4">
                    <div class="col-sm-10">
                        <h5> <i class="fas fa-list"></i>  All Stock List </h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover table-bordered">
                            <thead style="background-color:#a9a9a93d;">
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th> Company Name </th>
                                    <th> Product</th>
                                    <th> In Quntity</th>
                                    <th> Out Quntity</th>
                                    <th> Sales ReturnQty</th>
                                    <th>
                                        Balance Quantity
                                    </th>
                                    <th> AVG Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                     <tr id="@SN">
                                        <td>  @SN </td>
                                        <td>  @item.CompanyName </td>
                                        <td>  @(item.ProductCategoryName+"-"+item.ProductSubCategoryName+"-"+item.ProductName) </td>
                                        <td>  @item.InQty </td>
                                        <td>  @item.OutQty </td>
                                        <td>  @item.SalesReturnQty </td>
                                        <td>  @((item.InQty-item.OutQty)+item.SalesReturnQty) </td>
                                        <td>  @item.AVGPrice </td>
                                     </tr>
                                     SN++;
                                 }
                             </tbody>
                            </table>
                        </div>
                    </div>
                </div>
    </section>
    @section Scripts {
    <script>
        $(document).ready(function () {
            $('#Stock').addClass('menu-open');
            $('#StockIndex').addClass('active');
        });
    </script>
    }