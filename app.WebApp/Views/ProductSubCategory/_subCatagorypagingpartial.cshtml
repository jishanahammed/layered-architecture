@model Pager
@{
    var pager = Model.PagedList;
}
@if (pager.TotalPages > 0)
{
    <ul class="pagination justify-content-end mt-4">
        @if (pager.PageIndex > 1)
        {
            <li class="page-item">
                <a class="page-link" href="#1" onclick="SubCatagoryLoadPagination('@Model.StringUrl', 1)"> First </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#@(pager.PageIndex-1)" onclick="SubCatagoryLoadPagination('@Model.StringUrl',@(pager.PageIndex-1))"><i class="fas fa-backward"></i></a>
            </li>
        }
        @for (var pg = pager.PreviousPage; pg <= pager.NextPage; pg++)
        {
            if (pager.PageIndex == pg)
            {
                <li class="page-item active">
                    <a class="page-link" href="#@pg" onclick="SubCatagoryLoadPagination('@Model.StringUrl',@pg)"> @pg</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="#@pg" onclick="SubCatagoryLoadPagination('@Model.StringUrl',@pg)"> @pg</a>
                </li>
            }
        }
        @if (pager.PageIndex < pager.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="#@(pager.PageIndex+1)" onclick="SubCatagoryLoadPagination('@Model.StringUrl',@(pager.PageIndex+1))"><i class="fas fa-forward"></i></a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#@pager.TotalPages" onclick="SubCatagoryLoadPagination('@Model.StringUrl',@pager.TotalPages)"> Last </a>
            </li>
        }
    </ul>
}
